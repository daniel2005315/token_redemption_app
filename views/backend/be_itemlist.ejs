

<%- include header.ejs %>
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span3" id="sidebar">
                    <ul class="nav nav-list bs-docs-sidenav nav-collapse collapse">
                        <li class="active">
                            <a href="/be_listitem"><i class="icon-chevron-right"></i> Item</a>
                        </li>
                    </ul>
                </div>

                    <!--/span-->
                     <div class="span9" id="content">
                            <div class="row-fluid">
                            <!-- block -->
                            <div class="block">
                                <div class="navbar navbar-inner block-header">
                                    <div class="muted pull-left">Item List</div>
                                </div>
                                <div class="block-content collapse in">
                                    <div class="span12">
                                       <div class="table-toolbar">
                                          <div class="btn-group">
                                             <a href="./be_item?id=null"><button class="btn btn-success">Add New <i class="icon-plus icon-white"></i></button></a>
                                          </div>
                                       </div>
                                        
                                        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example2">
                                            <thead>
                                                <tr>
                                                    <th>Action</th>
                                                    <th>Title</th>
                                                    <th>Description</th>
                                                    <th>Tag</th>
                                                    <th>Quantity</th>
                                                    <th>Token Value</th>
                                                </tr>
                                            </thead>
                                            <tbody id="tablecontent">
                                                <% for (let item of data) {
                                                let endcoded_id = Query.stringify({id: item._id});
                                                 %>    
                                                <tr class="gradeU">
                                                    <td><a href=/be_item?<%=endcoded_id%>><button class="btn btn-primary"><i class="icon-edit icon-white"></i></button></a> <a href=/remove_item?<%=endcoded_id%>> <button class="btn btn-danger"><i class="icon-remove icon-white"></i></button></a> <a href=/itemExportCSV?<%=endcoded_id%>><button class="btn btn-info"><i class="icon-file icon-white"></i></button></a></td>
                                                    <td><%=item.title%></td>
                                                    <td><%=item.description%></td>
                                                    <td><%=item.tags%></td>
                                                    <td class="center"><%=item.quantity%></td>
                                                    <td class="center"><%=item.token_value%></td>
                                                </tr>
                                                 <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        <!-- Block -->
                    </div>
                <hr>
            </div>

