<%- include header.ejs %>

  <div id=content class="container">

<h5 class="row mt-3 mb-3 mx-3">My items</h5>
      <ul id="myItem" class="list-group">
        <div class="row w-100 justify-content-between">

        <span class="btn col text-center">Title</span>
        <span id="ascC" class="btn col text-center"  >Value</span>

        <span id="ascV" class="btn  col text-center"> Item ID</span>

        <!-- <span class="btn btn-info col-2 text-center" >Value</span> -->
        <span class="btn col text-center">Redemption time</span>
        </div>

      <%
        console.log(data.items);
        for (let item of data.items) {
        %>
          <li class="list-group-item mx-3">
            <div class="row w-100 justify-content-between">
            <span class="col mb-1 text-center"><%=item.title%></span>
            <span class="col mb-1 text-center"><%=item.token_value.toLocaleString()%></span>
            <span class="col mb-1 text-center"><%=item.itemId.toLocaleString()%></span>
            <span class="col mb-1 text-center"><%=item.timeStamp.toLocaleString()%></span>
          </div>
          </li>
      <% } %>
      <li class="list-group-item mx-3" id="noItem" style="display:none">
        <h5> There is no item... <a href="/listItems">Go redeem some!</a></h5>
      </li>
      </ul>
  </div>

<%- include footer.ejs %>

<script>
$(document).ready(function() {
  //alert($("#myItem").children().length);
  if($("#myItem").children().length<=2){
    $("#noItem").show();
  }else{
    $("#noItem").hide();
  }

});
</script>
